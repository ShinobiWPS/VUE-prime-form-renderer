{
	"extends": [
		"config:base",
		"group:all",
		"schedule:weekly",
		":widenPeerDependencies"
	],
	"enabledManagers": ["pnpm", "npm"],
	"packageRules": [
		{
			"updateTypes": ["patch"],
			"enabled": false
		},
		{
			"matchManagers": ["pnpm", "npm"],
			"automerge": true,
			"stabilityDays": 2
		},
		{
			"matchPackagePatterns": ["npm"],
			"rangeStrategy": "auto"
		}
	],
	"timezone": "Europe/Rome",
	"dependencyDashboard": true
}
